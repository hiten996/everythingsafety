$(document).ready(function() {
  const $searchResults = $('.predictive-search');

  $(document).click(function(event) {
    // Check if click was inside predictive search element
    const isClickInside = $searchResults.has(event.target).length > 0 || $searchResults.is(event.target);

    if (!isClickInside) {
      // Hide the search results without interfering with links or default behavior
      $searchResults.removeClass('is-active');
    }
  });
});
