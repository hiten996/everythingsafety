.shopify-section--slideshow .subheading{
  text-transform: uppercase;
}
.slideshow__carousel .button div{
  padding: 0 30px;
} 
.circle-button--bordered{
  border: none;
}
.slideshow__controls {
  left: 40px;
}
.shopify-section--featured-collection .product-card__title a{
  font-size: 24px;
  font-weight: 700;
  color: #394144;
}
.shopify-section--featured-collection .text-subdued{
  font-size: 24px;
  font-weight: 700;
  color: #394144;
}
.shopify-section--featured-collection .product-card__aside{
  display: none;
}
.floating-controls-container:hover .is-scrollable~.circle-button:not([disabled]){
  visibility: hidden !important;
}
.shopify-section--collection-list .text-with-icon {
  display: none;
}
.collection-card__content-wrapper.text-custom.place-self-start.text-start{
  display: flex;
    align-items: stretch;
    height: 100%;
    flex-wrap: wrap;
}
.collection-card__content-wrapper.text-custom.place-self-start.text-start span{
      display: flex;
    align-items: end;
    width: 100%;
}
.shopify-section--image-with-text-overlay .main-sub-content p{
  width: 320px;
  font-size: 18px;
}
.header__wrapper{
  justify-content: space-between;
    display: flex;
}
.right_side_top_bar{
  display: flex;
  gap: 8px;
}
.menu_top{
  display: flex;
  gap: 8px;
}
.main-location-section-header{
  display: flex;
  align-items: center;
  gap: 10px;
}
.main-header-navigation{
  display: flex;
  gap: 30px;
}
.header__secondary-nav .header__icon-list{
  gap: 60px;
}
.header-search-bar{
  width: 450px;
}
.search-bar-header{
  width: 300px;
}
.top_bar .header__wrapper{
  padding: 0px 275px;
  background-color: #394144;
  color: #ffffff;
}
.top_bar .header__wrapper .social-media{
  border-right: 1px solid #ffffff;
  padding-right: 14px;
  padding: 13px 14px 13px 0px;
}
.top_bar .header__wrapper .annoucet_bar{
  padding: 13px 0px;
}
.top_bar .header__wrapper .menu_top{
  align-items: center;
  gap: 16px;
}